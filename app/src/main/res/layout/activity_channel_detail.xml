<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.baogetv.app.model.channel.ChannelDetailActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_690"
        android:fitsSystemWindows="true"
        android:background="@color/white">
        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/white"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">
            <com.chalilayang.scaleview.ScaleRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_330"
                    android:src="@color/reshape_red"/>
                <com.chalilayang.scaleview.ScaleLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="@dimen/size_206"
                    android:orientation="horizontal">
                    <com.baogetv.app.customview.LogoCircleImageView
                        android:layout_width="@dimen/size_180"
                        android:layout_height="@dimen/size_180"
                        android:src="@mipmap/user_default_icon"
                        android:layout_gravity="center_vertical"/>
                    <com.chalilayang.scaleview.ScaleLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical">
                        <com.chalilayang.scaleview.ScaleTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/all_ranking"
                            android:textSize="@dimen/size_30"
                            android:textColor="@color/reply_content"/>
                        <com.chalilayang.scaleview.ScaleTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/all_ranking"
                            android:textSize="@dimen/size_30"
                            android:textColor="@color/reply_content"/>
                    </com.chalilayang.scaleview.ScaleLinearLayout>
                </com.chalilayang.scaleview.ScaleLinearLayout>
            </com.chalilayang.scaleview.ScaleRelativeLayout>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_channel_detail"/>

</android.support.design.widget.CoordinatorLayout>
