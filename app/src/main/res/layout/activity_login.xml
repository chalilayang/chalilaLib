<?xml version="1.0" encoding="utf-8"?>
<com.chalilayang.scaleview.ScaleRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/blue_login_bg"
    tools:context="com.baogetv.app.model.usercenter.activity.LoginActivity">
    <com.chalilayang.scaleview.ScaleRelativeLayout
        android:id="@+id/title_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/size_30">

        <ImageView
            android:id="@+id/back_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/back_icon_white"/>

        <com.chalilayang.scaleview.ScaleTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textAppearance="@style/title_big_style"/>

        <com.chalilayang.scaleview.ScaleTextView
            android:id="@+id/right_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textAppearance="@style/title_big_style"/>

    </com.chalilayang.scaleview.ScaleRelativeLayout>
    <com.chalilayang.scaleview.ScaleLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/size_110"
        android:layout_marginLeft="@dimen/size_80"
        android:layout_marginRight="@dimen/size_80"
        android:orientation="vertical"
        android:layout_below="@+id/title_container">
        <com.baogetv.app.model.usercenter.customview.TitleInputView
            android:id="@+id/mobile_num_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:input_title="@string/mobile_num"
            app:mobile_type="true"/>
        <com.baogetv.app.model.usercenter.customview.PasswordInputView
            android:id="@+id/password_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_30"
            android:focusableInTouchMode="true"/>

        <com.chalilayang.scaleview.ScaleTextView
            android:id="@+id/login_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/video_login_btn_bg_height"
            android:background="@drawable/video_login_red_bg"
            android:layout_marginTop="@dimen/size_110"
            android:gravity="center"
            android:text="@string/login"
            android:textColor="@color/white"
            android:textSize="@dimen/size_30"/>

        <com.chalilayang.scaleview.ScaleLinearLayout
            android:id="@+id/other_login_method_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_36"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <View
                android:layout_width="@dimen/size_60"
                android:layout_height="@dimen/size_2"
                android:background="@color/white"
                android:alpha="0.7"/>
            <com.chalilayang.scaleview.ScaleTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.7"
                android:layout_marginLeft="@dimen/size_12"
                android:text="@string/other_login_method"
                android:textColor="@color/white"
                android:textSize="@dimen/size_24"/>
            <View
                android:layout_width="@dimen/size_60"
                android:layout_height="@dimen/size_2"
                android:background="@color/white"
                android:layout_marginLeft="@dimen/size_12"
                android:alpha="0.7"/>
        </com.chalilayang.scaleview.ScaleLinearLayout>

        <com.chalilayang.scaleview.ScaleLinearLayout
            android:id="@+id/third_login_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_36"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_weixin"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_110"
                android:src="@mipmap/ic_qq"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_110"
                android:src="@mipmap/ic_weibo"/>
        </com.chalilayang.scaleview.ScaleLinearLayout>

        <com.chalilayang.scaleview.ScaleTextView
            android:id="@+id/new_user_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_user_register"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/size_80"
            android:textColor="@color/white"
            android:textSize="@dimen/size_32"/>
    </com.chalilayang.scaleview.ScaleLinearLayout>
</com.chalilayang.scaleview.ScaleRelativeLayout>
