<?xml version="1.0" encoding="utf-8"?>
<com.chalilayang.scaleview.ScaleRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.baogetv.app.model.videodetail.activity.VideoDetailActivity">
    <ImageView
        android:id="@+id/error_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/net_failed"
        android:visibility="gone"
        android:layout_centerInParent="true"/>
    <com.chalilayang.scaleview.ScaleFrameLayout
        android:id="@+id/video_player_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/video_player_height"
        android:layout_alignParentTop="true"/>

    <com.chalilayang.scaleview.ScaleFrameLayout
        android:id="@+id/video_detail_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/video_player_height"/>

    <com.chalilayang.scaleview.ScaleRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_98"
        android:layout_alignParentBottom="true"
        android:background="@color/white">
        <com.chalilayang.scaleview.ScaleEditText
            android:id="@+id/comment_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/send_edit_hint"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_30"
            android:layout_toLeftOf="@+id/comment_send_btn"
            android:cursorVisible="false"
            android:textSize="@dimen/size_32"
            android:textColor="@color/send_edit_text_color"
            android:inputType="text"
            android:background="@color/transparent"/>
        <ImageView
            android:id="@+id/comment_send_btn"
            android:layout_width="@dimen/size_140"
            android:layout_height="@dimen/size_60"
            android:layout_marginRight="@dimen/size_30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/send_btn_icon"/>
    </com.chalilayang.scaleview.ScaleRelativeLayout>
</com.chalilayang.scaleview.ScaleRelativeLayout>
