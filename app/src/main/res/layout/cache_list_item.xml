<?xml version="1.0" encoding="utf-8"?>
<com.chalilayang.customview.SwipeMenuLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_menu"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_190"
    app:swipeEnable="true"
    app:ios="true"
    app:leftSwipe="true">
    <com.chalilayang.scaleview.ScaleRelativeLayout
        android:id="@+id/item_content_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/size_30">
        <com.baogetv.app.customview.LogoImageView
            android:id="@+id/video_item_icon"
            android:layout_width="@dimen/size_256"
            android:layout_height="@dimen/size_135"
            android:background="@color/transparent"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"/>
        <com.baogetv.app.model.usercenter.customview.CacheInfoView
            android:id="@+id/cache_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_24"
            android:layout_marginRight="@dimen/size_24"
            android:layout_toRightOf="@+id/video_item_icon"/>
    </com.chalilayang.scaleview.ScaleRelativeLayout>
    <com.chalilayang.scaleview.ScaleTextView
        android:id="@+id/btn_delete"
        android:layout_width="@dimen/size_320"
        android:layout_height="match_parent"
        android:background="@color/reshape_red"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/delete"
        android:textSize="@dimen/size_45"
        android:textColor="@android:color/white"/>
</com.chalilayang.customview.SwipeMenuLayout>