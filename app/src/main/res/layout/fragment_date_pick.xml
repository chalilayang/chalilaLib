<?xml version="1.0" encoding="utf-8"?>
<com.chalilayang.scaleview.ScaleRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/reshape_red">

    <com.chalilayang.scaleview.ScaleRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_32"
        android:layout_marginRight="@dimen/size_32"
        android:layout_alignParentBottom="true">
        <com.chalilayang.scaleview.ScaleTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirm"
            android:textColor="@color/blue"
            android:textSize="@dimen/size_32"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <com.chalilayang.scaleview.ScaleTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:textColor="@color/blue"
            android:textSize="@dimen/size_32"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </com.chalilayang.scaleview.ScaleRelativeLayout>

</com.chalilayang.scaleview.ScaleRelativeLayout>