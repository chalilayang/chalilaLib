<?xml version="1.0" encoding="utf-8"?>
<com.chalilayang.scaleview.ScaleRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aigestudio="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_corner_rec">

    <com.chalilayang.scaleview.ScaleRelativeLayout
        android:id="@+id/top_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/size_32"
        android:layout_marginLeft="@dimen/size_32"
        android:layout_marginRight="@dimen/size_32">

        <com.chalilayang.scaleview.ScaleTextView
            android:id="@+id/confirm_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/confirm"
            android:textColor="@color/blue"
            android:textSize="@dimen/size_42"/>

        <com.chalilayang.scaleview.ScaleTextView
            android:id="@+id/cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/cancel"
            android:textColor="@color/blue"
            android:textSize="@dimen/size_42"/>
    </com.chalilayang.scaleview.ScaleRelativeLayout>

    <com.chalilayang.scaleview.ScaleLinearLayout
        android:id="@+id/date_picker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_container"
        android:layout_marginTop="@dimen/size_32"
        android:orientation="horizontal">

        <com.aigestudio.wheelpicker.WheelPicker
            android:id="@+id/year_picker"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            aigestudio:wheel_atmospheric="true"
            aigestudio:wheel_curved="true"
            aigestudio:wheel_cyclic="false"
            aigestudio:wheel_indicator="true"
            aigestudio:wheel_indicator_color="@color/channel_list_divider"
            aigestudio:wheel_indicator_size="1dp"
            aigestudio:wheel_item_align="center"
            aigestudio:wheel_item_text_color="@color/black"
            aigestudio:wheel_item_text_size="@dimen/size_36"
            aigestudio:wheel_selected_item_text_color="@color/black"/>

        <com.aigestudio.wheelpicker.WheelPicker
            android:id="@+id/month_picker"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            aigestudio:wheel_atmospheric="true"
            aigestudio:wheel_curved="true"
            aigestudio:wheel_cyclic="false"
            aigestudio:wheel_indicator="true"
            aigestudio:wheel_indicator_color="@color/channel_list_divider"
            aigestudio:wheel_indicator_size="1dp"
            aigestudio:wheel_item_text_color="@color/black"
            aigestudio:wheel_item_text_size="@dimen/size_36"
            aigestudio:wheel_selected_item_text_color="@color/black"/>

        <com.aigestudio.wheelpicker.WheelPicker
            android:id="@+id/day_picker"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            aigestudio:wheel_atmospheric="true"
            aigestudio:wheel_curved="true"
            aigestudio:wheel_cyclic="false"
            aigestudio:wheel_indicator="true"
            aigestudio:wheel_indicator_color="@color/channel_list_divider"
            aigestudio:wheel_indicator_size="1dp"
            aigestudio:wheel_item_align="center"
            aigestudio:wheel_item_text_color="@color/black"
            aigestudio:wheel_item_text_size="@dimen/size_36"
            aigestudio:wheel_selected_item_text_color="@color/black"/>
    </com.chalilayang.scaleview.ScaleLinearLayout>
</com.chalilayang.scaleview.ScaleRelativeLayout>