<com.chalilayang.scaleview.ScaleRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.baogetv.app.model.videodetail.fragment.VideoDetailFragment">

    <com.chalilayang.scaleview.ScaleLinearLayout
        android:id="@+id/video_detail_title_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">
        <com.chalilayang.scaleview.ScaleRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.chalilayang.scaleview.ScaleTextView
                android:id="@+id/ad_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="@dimen/size_30"
                android:includeFontPadding="false"
                android:textSize="@dimen/size_26"
                android:textColor="@color/reply_content"
                android:drawablePadding="@dimen/size_20"
                android:layout_marginTop="@dimen/size_10"
                android:layout_marginBottom="@dimen/size_10"
                android:drawableRight="@mipmap/click_to_view"/>
        </com.chalilayang.scaleview.ScaleRelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/channel_list_divider"/>
    </com.chalilayang.scaleview.ScaleLinearLayout>
    <com.chalilayang.scaleview.ScaleRelativeLayout
        android:id="@+id/segment_title_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/video_detail_title_container">
        <android.support.design.widget.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:tabMode="fixed"
            app:tabIndicatorHeight="2dp"
            app:tabIndicatorColor="@color/reshape_red"
            app:tabSelectedTextColor="@color/reshape_red"
            app:tabTextColor="#333333"
            app:tabTextAppearance="@style/video_detail_tab_text_style"/>
    </com.chalilayang.scaleview.ScaleRelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/segment_title_container"/>

</com.chalilayang.scaleview.ScaleRelativeLayout>
