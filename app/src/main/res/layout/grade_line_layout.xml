<?xml version="1.0" encoding="utf-8"?>
<com.chalilayang.scaleview.ScaleLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical">
    <com.chalilayang.scaleview.ScaleTextView
        android:id="@+id/grade_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_marginTop="@dimen/size_40"
        android:layout_marginBottom="@dimen/size_40"
        android:textSize="@dimen/size_26"
        android:textColor="@color/reply_name"/>
    <com.chalilayang.scaleview.ScaleFrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <com.chalilayang.scaleview.ScaleTextView
            android:id="@+id/grade_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/size_120"
            android:gravity="center"
            android:maxLines="1"
            android:background="@drawable/search_label_bg"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/size_10"
            android:paddingRight="@dimen/size_10"
            android:paddingTop="@dimen/size_5"
            android:paddingBottom="@dimen/size_5"
            android:textColor="@color/reply_name"
            android:textSize="@dimen/size_20"/>
    </com.chalilayang.scaleview.ScaleFrameLayout>

    <com.chalilayang.scaleview.ScaleTextView
        android:id="@+id/grade_score"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_marginTop="@dimen/size_40"
        android:layout_marginBottom="@dimen/size_40"
        android:textSize="@dimen/size_26"
        android:textColor="@color/reply_name"/>
</com.chalilayang.scaleview.ScaleLinearLayout>