<?xml version="1.0" encoding="utf-8"?>
<com.chalilayang.scaleview.ScaleRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/controller_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.chalilayang.scaleview.ScaleRelativeLayout
        android:id="@+id/top_group"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_100">
        <ImageView
            android:id="@+id/full_screen_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_20"
            android:src="@mipmap/back_icon_white"/>
        <com.chalilayang.scaleview.ScaleTextView
            android:id="@+id/player_title_fullscreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/full_screen_back"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/size_30"
            android:textSize="@dimen/size_28"/>
        <com.chalilayang.scaleview.ScaleTextView
            android:id="@+id/player_title_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:textSize="@dimen/size_28"/>
        <ImageView
            android:id="@+id/player_share"
            android:layout_width="@dimen/size_36"
            android:layout_height="@dimen/size_36"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/size_40"
            android:src="@mipmap/player_share"/>
        <ImageView
            android:id="@+id/player_add_collect"
            android:layout_width="@dimen/size_36"
            android:layout_height="@dimen/size_36"
            android:layout_toLeftOf="@+id/player_share"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/size_40"
            android:src="@mipmap/player_thumb_up"/>
        <ImageView
            android:id="@+id/player_shoot"
            android:layout_width="@dimen/size_36"
            android:layout_height="@dimen/size_36"
            android:layout_toLeftOf="@+id/player_add_collect"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/size_40"
            android:src="@mipmap/player_shoot"/>
    </com.chalilayang.scaleview.ScaleRelativeLayout>
    <ImageView
        android:id="@+id/pause_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@mipmap/play_start"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        android:src="@mipmap/player_bottom_bg"/>

    <com.chalilayang.scaleview.ScaleRelativeLayout
        android:id="@+id/small_screen_controller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/size_20">
        <ImageView
            android:id="@+id/small_screen_btn"
            android:layout_width="@dimen/size_32"
            android:layout_height="@dimen/size_32"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/size_20"
            android:layout_marginLeft="@dimen/size_30"
            android:src="@mipmap/full_screen_icon"/>
        <com.chalilayang.scaleview.ScaleRelativeLayout
            android:id="@+id/small_seek_bar_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/small_screen_btn"
            android:layout_marginLeft="@dimen/size_20">
            <com.chalilayang.scaleview.ScaleTextView
                android:id="@+id/player_time_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="@dimen/size_10"
                android:text="00:00"
                android:textColor="@color/white"
                android:textSize="@dimen/size_24"/>
            <com.chalilayang.scaleview.ScaleTextView
                android:id="@+id/player_duration_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/size_10"
                android:text="00:00"
                android:textColor="@color/white"
                android:textSize="@dimen/size_24"/>
            <com.baogetv.app.model.videodetail.customview.CustomSeekBar
                android:id="@+id/player_seek_bar_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/player_time_small"
                android:layout_toLeftOf="@+id/player_duration_small"
                android:layout_centerVertical="true"/>
        </com.chalilayang.scaleview.ScaleRelativeLayout>
    </com.chalilayang.scaleview.ScaleRelativeLayout>

    <!--改变亮度-->
    <LinearLayout
        android:id="@+id/change_brightness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_radius_4"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_palyer_brightness"/>

        <ProgressBar
            android:id="@+id/change_brightness_progress"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="100dp"
            android:layout_height="2dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="8dp"
            android:max="100"
            android:progressDrawable="@drawable/pb_change"/>

    </LinearLayout>
    <!--改变声音-->
    <LinearLayout
        android:id="@+id/change_volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_radius_4"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_palyer_volume"/>

        <ProgressBar
            android:id="@+id/change_volume_progress"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="100dp"
            android:layout_height="2dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="8dp"
            android:max="100"
            android:progressDrawable="@drawable/pb_change"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/player_lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/size_100"
        android:src="@mipmap/player_unlock"/>
</com.chalilayang.scaleview.ScaleRelativeLayout>