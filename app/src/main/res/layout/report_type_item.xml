<?xml version="1.0" encoding="utf-8"?>
<com.chalilayang.scaleview.ScaleRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.chalilayang.scaleview.ScaleTextView
        android:id="@+id/video_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:text="@string/report_type_no_relation"
        android:textSize="@dimen/size_36"
        android:textColor="@color/black"/>
    <ImageView
        android:id="@+id/report_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@mipmap/gouxuan"
        android:visibility="gone"/>
</com.chalilayang.scaleview.ScaleRelativeLayout>