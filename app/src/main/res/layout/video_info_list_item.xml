<?xml version="1.0" encoding="utf-8"?>
<com.chalilayang.scaleview.ScaleRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_206">
    <com.baogetv.app.customview.LogoImageView
        android:id="@+id/video_item_icon"
        android:layout_width="@dimen/size_280"
        android:layout_height="@dimen/size_158"
        android:background="@color/black"
        android:scaleType="fitXY"
        android:layout_marginLeft="@dimen/size_30"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"/>
    <com.chalilayang.scaleview.ScaleLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/size_24"
        android:layout_toRightOf="@+id/video_item_icon"
        android:layout_marginRight="@dimen/size_30"
        android:orientation="vertical"
        android:gravity="center_vertical">
        <com.chalilayang.scaleview.ScaleTextView
            android:id="@+id/video_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_settings"
            android:textAppearance="@style/cache_list_item_title"/>
        <com.chalilayang.scaleview.ScaleTextView
            android:id="@+id/video_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/cache_list_item_desc"/>
    </com.chalilayang.scaleview.ScaleLinearLayout>
</com.chalilayang.scaleview.ScaleRelativeLayout>