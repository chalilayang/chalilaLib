<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <declare-styleable name="FlowLayout">
        <attr name="width_space" format="dimension"/>
        <attr name="height_space" format="dimension"/>
    </declare-styleable>

    <style name="home_tab_text_style">
        <item name="android:textSize">@dimen/size_60</item>
    </style>

    <style name="search_column_title">
        <item name="android:textSize">@dimen/size_28</item>
        <item name="android:textColor">#999999</item>
    </style>
    <style name="search_label">
        <item name="android:textSize">@dimen/size_24</item>
        <item name="android:textColor">@color/search_label_text</item>
    </style>
    <style name="title_big_style">
        <item name="android:textSize">@dimen/size_34</item>
        <item name="android:textColor">@color/reshape_red</item>
    </style>
    <style name="channel_item_title">
        <item name="android:textSize">@dimen/size_30</item>
        <item name="android:textColor">#333333</item>
    </style>
    <style name="channel_item_video_count">
        <item name="android:textSize">@dimen/size_24</item>
        <item name="android:textColor">#999999</item>
    </style>
    <style name="channel_item_desc">
        <item name="android:textSize">@dimen/size_26</item>
        <item name="android:textColor">#777777</item>
    </style>
    <style name="cache_list_item_title">
        <item name="android:textSize">@dimen/size_30</item>
        <item name="android:textColor">#333333</item>
    </style>
    <style name="cache_list_item_desc">
        <item name="android:textSize">@dimen/size_24</item>
        <item name="android:textColor">#999999</item>
    </style>
    <style name="channel_item_update_time" parent="channel_item_video_count"/>
    <declare-styleable name="MineLineItemViewAttr">
        <attr name="title" format="string"/>
        <attr name="item_icon" format="reference"/>
    </declare-styleable>
</resources>
